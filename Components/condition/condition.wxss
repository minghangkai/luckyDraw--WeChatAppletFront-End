.prizesetting{
  padding-left: 25rpx;
  width: 100%;
  float:left;
  /*border: 1px red solid;*/
  display: flex;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  background-color: #dddddd;
}

.setPrize{
  width: 190rpx;
  color: #616161;
  /*border: 1px red solid;*/
  font-size: 30rpx;
}

.redStar{
  color: #E57373;
  float: left;
  display: flex;
}

.Line {
    display: flex;
    width: 100%;
    height: 80rpx;
    border-top: 1rpx lightgray solid;
