}

.picker{
  border: 1px red solid;
}

.picker_text {
    margin-top: 19rpx;
    width: 562.5rpx;
    line-height: 40rpx;
    text-align: right;
}

.address_image {
  margin-left: 6rpx;
  height: 20rpx;
  width: 20rpx;
  float: right;
  margin-top:13rpx;
}

.tips{
  font-size: 28rpx;
  margin:auto;
}

.input{
  width: 75%;
    float: right;
