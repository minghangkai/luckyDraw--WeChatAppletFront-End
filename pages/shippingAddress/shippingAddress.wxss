/* pages/shippingAddress/shippingAddress.wxss */
.tips{
  display: flex;
  width: 100%;
  text-align: center;
  justify-content: center;
  font-size: 24rpx;
  color: #9E9E9E;
  margin: 20rpx 0 20rpx 0;
}

.Line {
  display: flex;
  width: 100%;
  height: 80rpx;
  border-top: 1rpx lightgray solid;
  border-bottom: 1rpx lightgray solid;
  background-color: white;
}

.LineOfAddress {
  display: flex;
  width: 100%;
  height: 240rpx;
  border-top: 1rpx lightgray solid;
  border-bottom: 1rpx lightgray solid;
  background-color: white;
}

.name {
  display: flex;
  padding-top: 19rpx;
  line-height: 40rpx;
  text-align: left;
  justify-content: left;
  width: 25%;
  font-size: 28rpx;
  margin-left: 20rpx; 
}
    
.input75 {
  width: 75%;
  float: left;
  text-align: left;
  line-height: 1.5;
  height: 100%;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.textarea75{
  padding-top: 20rpx;
  font-size: 28rpx;
  height: 220rpx;
}


.confirm{
  background-color: #FF5252;
  margin: 30rpx 40rpx 20rpx 40rpx;
  color: white;
}